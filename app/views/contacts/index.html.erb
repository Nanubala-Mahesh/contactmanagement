


<div class="row">
  <div class="col-md-8">
    <div class="page-header">
      <h1>All Contacts</h1>
    </div>
    <% if @contacts.empty? %>
    <p>No Contacts Found </p>
    <% else %>
    <table class="table" "table-stiped">
      <thead >
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th> Phone </th>
          <th> Address </th>
          <th> Country </th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.first_name %></td>
          <td><%= contact.last_name %></td>
          <td><%= contact.phones.pluck(:phone_number).join(', ') %></td>
          <td><%= contact.addresses.pluck(:address).join(',') %></td>
          <td><%= contact.addresses.pluck(:country).join(',') %></td>
          <td><%= link_to 'Show', contact %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
          <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <% end %>
  </div>


  <div class="col-md-4">
  <div class="page-header">
  <h3> Add Contact </h3>
  </div>

    <%= link_to 'New Contact', new_contact_path, class: "btn btn-success" %>
  </div>
</div>




